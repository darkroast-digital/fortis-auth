<table>
    <thead>
        <tr>
            <td>ID</td> 
            <td>User</td>
            <td>Name</td>
            <td>Added</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        {% for result in results %}
                <tr>
                    <td data-th="ID">{{ result.id }}</td>
                    <td data-th="User"><img src="/assets/uploads/avatars/{{ result.user.avatar }}.jpg" draggable="false"></td>
                    <td data-th="Name"><a href="{{ path_for('dashboard.posts.edit', { 'slug': result.slug} ) }}">{{ result.name }}</a> <small>Slug: {{result.slug}}</small></td>
                    <td data-th="Added">{{ result.created_at }}</td>
                    <td data-th="Edit"><a href="{{ path_for('dashboard.posts.edit', { 'slug': result.slug} ) }}" class="edit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
                            <g class="icon icon-edit">
                                <path d="M2 12.88V16h3.12L14 7.12 10.88 4 2 12.88zm14.76-8.51c.33-.33.33-.85 0-1.18l-1.95-1.95c-.33-.33-.85-.33-1.18 0L12 2.88 15.12 6l1.64-1.63z"></path>
                            </g>
                        </svg>
                    </a></td>
                    <td data-th="Trash"><a href="{{ path_for('dashboard.posts.delete', { 'slug': result.slug } ) }}" class="delete"><svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 16 16" xml:space="preserve" width="16" height="16"><g class="icon icon-delete"><rect data-color="color-2" x="5" y="7" width="2" height="6"></rect> <rect data-color="color-2" x="9" y="7" width="2" height="6"></rect> <path d="M12,1c0-0.6-0.4-1-1-1H5C4.4,0,4,0.4,4,1v2H0v2h1v10c0,0.6,0.4,1,1,1h12c0.6,0,1-0.4,1-1V5h1V3h-4V1z M6,2h4 v1H6V2z M13,5v9H3V5H13z"></path></g></svg></a></td>
                </tr>
                <tr class="spacer"></tr>
        {% endfor %}
    </tbody>
</table>

